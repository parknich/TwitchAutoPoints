{
  "manifest_version": 2,
  "name": "AutoTwitchPoints",
  "version": "0.1",

  "permissions": ["activeTab"],

  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["AutoTwitchPointsCS.js"]
    }
  ],

  "icons": {
    "48": "icons/icon.png",
    "96": "icons/iconx2.png"
  },

  "background": {
    "scripts": ["backgroundScript.js"]
  }
}
